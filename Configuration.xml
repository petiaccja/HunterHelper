<Ui xmlns="http://www.blizzard.com/wow/ui/" 
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   xsi:schemaLocation="http://www.blizzard.com/wow/ui/ 
                   ..\..\FrameXML\UI.xsd">
  <Script File="Configuration.lua"/>
  <Frame name="HunterHelper_ConfigFrame">
    <Size x="400" y="400"/>
    <Anchors>
      <Anchor point="CENTER"/>
    </Anchors>
    <Scripts>
      <OnLoad>
        HunterHelper_CFG:OnLoad()
      </OnLoad>
    </Scripts>
    <Frames>
        <CheckButton name="HunterHelper_ConfigDraggable" inherits="OptionsCheckButtonTemplate" checked="false">
            <Anchors>
                <Anchor point="TOPLEFT">
                    <Offset>
                        <AbsDimension x="10" y="-10"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </CheckButton>
        <Slider name="HunterHelper_ConfigScale" orientation="HORIZONTAL" enableMouse="true" virtual="true" minValue="16" maxValue="256" valueStep="1">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="HunterHelper_ConfigDraggable" relativePoint="BOTTOMLEFT">
                    <Offset>
                        <AbsDimension x="0.0" y="-20"/>
                    </Offset>
                </Anchor>
            </Anchors>
            <Size x="144" y="17"/>
            <HitRectInsets left="0" right="0" top="-10" bottom="-10"/>
            <Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
                <EdgeSize val="8"/>
                <TileSize val="8"/>
                <BackgroundInsets left="3" right="3" top="6" bottom="6"/>
            </Backdrop>
            <ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
                <Size x="32" y="32"/>
            </ThumbTexture>
        </Slider>
        <Slider name="HunterHelper_ConfigCombatAlpha" orientation="HORIZONTAL" enableMouse="true" virtual="true" minValue="0" maxValue="1" valueStep="0.01">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="HunterHelper_ConfigScale" relativePoint="BOTTOMLEFT">
                    <Offset>
                        <AbsDimension x="0.0" y="-20"/>
                    </Offset>
                </Anchor>
            </Anchors>
            <Size x="144" y="17"/>
            <HitRectInsets left="0" right="0" top="-10" bottom="-10"/>
            <Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
                <EdgeSize val="8"/>
                <TileSize val="8"/>
                <BackgroundInsets left="3" right="3" top="6" bottom="6"/>
            </Backdrop>
            <ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
                <Size x="32" y="32"/>
            </ThumbTexture>
        </Slider>
        <Slider name="HunterHelper_ConfigIdleAlpha" orientation="HORIZONTAL" enableMouse="true" virtual="true" minValue="0" maxValue="1" valueStep="0.01">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="HunterHelper_ConfigCombatAlpha" relativePoint="BOTTOMLEFT">
                    <Offset>
                        <AbsDimension x="0.0" y="-20"/>
                    </Offset>
                </Anchor>
            </Anchors>
            <Size x="144" y="17"/>
            <HitRectInsets left="0" right="0" top="-10" bottom="-10"/>
            <Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
                <EdgeSize val="8"/>
                <TileSize val="8"/>
                <BackgroundInsets left="3" right="3" top="6" bottom="6"/>
            </Backdrop>
            <ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
                <Size x="32" y="32"/>
            </ThumbTexture>
        </Slider>
        <Slider name="HunterHelper_ConfigNotargetAlpha" orientation="HORIZONTAL" enableMouse="true" virtual="true" minValue="0" maxValue="1" valueStep="0.01">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="HunterHelper_ConfigIdleAlpha" relativePoint="BOTTOMLEFT">
                    <Offset>
                        <AbsDimension x="0.0" y="-20"/>
                    </Offset>
                </Anchor>
            </Anchors>
            <Size x="144" y="17"/>
            <HitRectInsets left="0" right="0" top="-10" bottom="-10"/>
            <Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
                <EdgeSize val="8"/>
                <TileSize val="8"/>
                <BackgroundInsets left="3" right="3" top="6" bottom="6"/>
            </Backdrop>
            <ThumbTexture name="$parentThumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
                <Size x="32" y="32"/>
            </ThumbTexture>
        </Slider>
        <CheckButton name="HunterHelper_ConfigEnablePoly" inherits="OptionsCheckButtonTemplate" checked="true">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="HunterHelper_ConfigNotargetAlpha" relativePoint="BOTTOMLEFT">
                    <Offset>
                        <AbsDimension x="0.0" y="-10"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </CheckButton>
        <CheckButton name="HunterHelper_ConfigEnableFriendlyFire" inherits="OptionsCheckButtonTemplate" checked="true">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="HunterHelper_ConfigEnablePoly" relativePoint="BOTTOMLEFT">
                    <Offset>
                        <AbsDimension x="0.0" y="0"/>
                    </Offset>
                </Anchor>
            </Anchors>
        </CheckButton>
    </Frames>
    <Layers>
        <Layer>
            <FontString name="HunterHelper_ConfigLabelDraggable" text="Move frame" font="Fonts\FRIZQT__.TTF">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="HunterHelper_ConfigDraggable" relativePoint="RIGHT"/>
                </Anchors>
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="12"/>
            </FontString>
            <FontString name="HunterHelper_ConfigLabelScale" text="UI button size (pixels)" font="Fonts\FRIZQT__.TTF">
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="HunterHelper_ConfigScale" relativePoint="TOP"/>
                </Anchors>
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="12"/>
            </FontString>
            <FontString name="HunterHelper_ConfigLabelCombatAlpha" text="In combat alpha" font="Fonts\FRIZQT__.TTF">
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="HunterHelper_ConfigCombatAlpha" relativePoint="TOP"/>
                </Anchors>
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="12"/>
            </FontString>
            <FontString name="HunterHelper_ConfigLabelIdleAlpha" text="Out of combat alpha" font="Fonts\FRIZQT__.TTF">
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="HunterHelper_ConfigIdleAlpha" relativePoint="TOP"/>
                </Anchors>
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="12"/>
            </FontString>
            <FontString name="HunterHelper_ConfigLabelNotargetAlpha" text="No target alpha" font="Fonts\FRIZQT__.TTF">
                <Anchors>
                    <Anchor point="BOTTOM" relativeTo="HunterHelper_ConfigNotargetAlpha" relativePoint="TOP"/>
                </Anchors>
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="12"/>
            </FontString>
            <FontString name="HunterHelper_ConfigLabelDraggable" text="Warn for polymorphed targets" font="Fonts\FRIZQT__.TTF">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="HunterHelper_ConfigEnablePoly" relativePoint="RIGHT"/>
                </Anchors>
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="12"/>
            </FontString>
            <FontString name="HunterHelper_ConfigLabelDraggable" text="Warn for friendly fire" font="Fonts\FRIZQT__.TTF">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="HunterHelper_ConfigEnableFriendlyFire" relativePoint="RIGHT"/>
                </Anchors>
                <Color r="1" g="1" b="1" a="1"/>
                <FontHeight val="12"/>
            </FontString>
        </Layer>
    </Layers>
  </Frame>
</Ui>